  position: absolute;
  width: 100%;
  z-index: 0;
  text-align: center
}

.richtext{
  font-weight: bold;
  font-size: 30rpx;
  position: absolute;
  z-index: 0;
  margin-top: 80rpx;
  margin-left:40rpx;
}
.timebtn{
  width:150rpx;
  height: 75rpx;
  border: 1rpx solid rgb(255, 153, 0);
